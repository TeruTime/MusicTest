<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_musicplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#333333"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="songName"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/songAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="songAlbum"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/songName"
        android:layout_above="@+id/mp3Image" />
    
    <com.terutime.billding.musictest.SquareImageView
        android:id="@+id/mp3Image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_above="@+id/seekBar"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_above="@+id/songDuration"/>
    
    <TextView
        android:id="@+id/songDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="songDuration"
        android:layout_above="@+id/playBar"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="#292929"
        android:id="@+id/playBar" >

        <ImageButton
            android:id="@+id/media_rew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_weight = "1"
            android:onClick="rewind"
            android:src="@android:drawable/ic_media_rew"
            android:background="@null" />

        <ImageButton
            android:id="@+id/media_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:onClick="play"
            android:src="@android:drawable/ic_media_play"
            android:background="@null" />

        <ImageButton
            android:id="@+id/media_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:onClick="forward"
            android:src="@android:drawable/ic_media_ff"
            android:background="@null" />
    </LinearLayout>

</RelativeLayout>